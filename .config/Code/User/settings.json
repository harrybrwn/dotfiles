{
    "editor.minimap.enabled": true,
    "editor.renderControlCharacters": false,
    "editor.suggestSelection": "first",
    "files.trimTrailingWhitespace": true,

    "workbench.colorTheme": "Horizon",
    "workbench.activityBar.visible": true,
    "workbench.colorCustomizations": {
        "editorLineNumber.foreground": "#d5d8da2f",
        // "statusBar.background": "#e95378",   // pink
        // "statusBar.background": "#42a5f5",   // blue
        // "statusBar.background": "#5293e5",   // blue
        // "statusBar.background": "#007ACC",   // default blue
        // "statusBar.background": "#CF4F6Daa", // pink red
        // "statusBar.background": "#34FEBB",   // green
        // "statusBar.background": "#9f4bc4bb", // purple

        // "statusBar.foreground": "#ffffffda", // white
        // "statusBar.foreground": "#797b80",   // light grey
        // "statusBar.foreground": "#000000",   // black
        // "statusBar.foreground": "#1c1e26",   // grey
    },
    "window.menuBarVisibility":"toggle",

    "files.associations": {
        "*.h": "c",
        // "TODO": "yaml",
        "vimrc": "viml",
        "*.vim": "viml",
        "*.sql": "sql",
    },

    /* go */
    "go.useLanguageServer": true,
    "go.toolsManagement.autoUpdate": true,
    "go.executable.path": "/usr/local/go/bin/go",

    /* Python */
    "python.languageServer": "Pylance",
    "python.pythonPath": "/home/harry/anaconda3/bin/python",
    "python.jediEnabled": false,

    /* C/C++ */
    "C_Cpp.updateChannel": "Insiders",
    "[c]": {
        "editor.defaultFormatter": "ms-vscode.cpptools",
        "editor.fontFamily": "'Cascadia Code', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
        "editor.fontLigatures": true,
    },
    "[cpp]": {
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },

    /* Rust */
    "rust-analyzer.inlayHints.enable": false,

    /* js/ts */
    "[jsx-tags]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.tabSize": 2
    },
    "[javascriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.tabSize": 2
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.insertSpaces": true,
        "editor.tabSize": 2
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.tabSize": 2,
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.tabSize": 2,
    },
    "[scss]": {
        "editor.suggest.insertMode": "replace",
        "editor.formatOnSave": true,
        "editor.tabSize": 2
    },

    /* Latex */
    // "latex-workshop.view.pdf.ref.viewer": "auto",

    "[markdown-math]": {
        "editor.tabSize": 2
    },
    /* Markdown */
    "[md]": {
        "editor.tabSize": 2
    },
    "[markdown]": {
        "editor.tabSize": 2
    },

    /* SQL */
    "[sql]": {
        "editor.defaultFormatter": "adpyke.vscode-sql-formatter"
    },
    "[sqlite]": {
        "editor.defaultFormatter": "adpyke.vscode-sql-formatter"
    },

    /* Java */
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "java.configuration.checkProjectSettingsExclusions": false,
    "java.errors.incompleteClasspath.severity": "ignore",
    "[java]":{
        "editor.suggest.snippetsPreventQuickSuggestions": false,
        "editor.formatOnSave": false,
        "files.trimTrailingWhitespace": false,
    },

    /* Verilog */
    "[verilog]": {
        "editor.tabSize": 2,
    },

    /* Vim Mode ext. */
    "vim.vimrc.path": "/home/harry/.vim/vimrc",
    "vim.useSystemClipboard": true,
    "vim.cursorStylePerMode.insert": "block",
    "vim.insertModeKeyBindings": [
        {
            "before": ["<C-j>"],
            "after": ["<Esc>"]
        },
    ],
    "vim.visualModeKeyBindings": [
        {
            "before": ["<C-c>"],
            "after": ["\"", "+", "y"]
        },
        // {
        //     "before": ["<C-v>"],
        //     "after":  ["\"", "+", "p"]
        // }
    ],

    /* Built-it Terminal */
    "terminal.integrated.shell.linux": "/bin/bash",
    "terminal.integrated.fontFamily": "'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",

    /* Misc. */
    "breadcrumbs.enabled": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "todo-tree.tree.showScanModeButton": false,
    "cSpell.userWords": [
        "Merkle",
        "merkleroot",
        "monospace",
        "Popd",
        "protobuf",
        "protoc",
        "Pushd",
        "struct",
        "systemd",
        "unmarshaling",
        "UTXO"
    ],

    "cSpell.enabled": true,

    "latex-workshop.view.pdf.viewer": "tab",
    "jupyter.sendSelectionToInteractiveWindow": false,
    "latex-workshop.message.update.show": false,

    "liveshare.shareExternalFiles": false,
    "liveshare.anonymousGuestApproval": "accept",
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "liveshare.presence": false,

    "todohighlight.keywords": [
        {
            "text": "TODO",
            "backgroundColor": "white",
            "color": "black",
            "borderRadius": "3px"
        }
    ],
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "liveshare.authenticationProvider": "GitHub",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter.notebook.ipynb"
    },
    "cmake.configureOnOpen": true,
    "editor.cursorStyle": "line",
    "editor.insertSpaces": false,
    "editor.lineNumbers": "on",
    "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
    "editor.wordWrap": "off",
    "workbench.iconTheme": "material-icon-theme",
    "python.defaultInterpreterPath": "/home/harry/anaconda3/bin/python",
    "redhat.telemetry.enabled": false,
}