llm_vram() {
  local params="$1"
  local q="$2"
  # python -c "print((1e9 * $params) * ($q / 8.0) * 1.2)"
  python <<-EOT
size = float("${params}".rstrip("Bb"))
q = ${q}
vram = size * (q / 8.0) * 1.2
print(f"{vram}G")
EOT
}

