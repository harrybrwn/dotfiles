alias '?'=google
google() {
  local q="$*"
  if [ -z "$q" ]; then
    x-www-browser "https://www.google.com"
  else
    local query=""
    for w in $(echo "$q"); do
      if [ -n "$query" ]; then
        query="$query+$w"
      else
        query="$w"
      fi
    done
    x-www-browser "https://www.google.com/search?q=$query"
  fi
}

