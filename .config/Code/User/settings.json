{
    /* Editor settings */
    "editor.minimap.enabled": true,
    "editor.renderControlCharacters": false,
    "editor.suggestSelection": "first",
    "editor.cursorStyle": "line",
    "editor.insertSpaces": false,
    "editor.lineNumbers": "on",
    "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
    "editor.wordWrap": "off",

    "files.trimTrailingWhitespace": true,

    "workbench.colorTheme": "Horizon",
    "workbench.activityBar.visible": true,
    "workbench.colorCustomizations": {
        // "statusBar.background": "#007ACC",   // default vscode blue
        // "statusBar.background": "#9f4bc4bb", // purple

        /* Horizon */
        "editorLineNumber.foreground": "#d5d8da2f",
        "statusBar.background": "#1c1e26",    // grey (default for horizon theme)
        // "statusBar.background": "#e95378",   // pink (same as horizon theme's pink)
        // "statusBar.foreground": "#e95378",   // pink (same as horizon theme's pink)

        /* Pitch Black
        "editor.selectionHighlightBackground": "#0b003b",
        "editor.selectionHighlightBorder": "#0b003b"
        */
    },
    "workbench.iconTheme": "material-icon-theme",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter.notebook.ipynb"
    },
    "window.menuBarVisibility":"toggle",

    "files.associations": {
        "*.h": "c",
        "TODO": "markdown",
        "vimrc": "viml",
        "*.vim": "viml",
        "*.sql": "sql",
    },

    /* go */
    "go.useLanguageServer": true,
    "go.toolsManagement.autoUpdate": true,

    /* Python */
    "python.languageServer": "Pylance",
    "python.pythonPath": "/home/harry/anaconda3/bin/python",
    "python.defaultInterpreterPath": "/home/harry/anaconda3/bin/python",
    "[python]": {
        // "files.trimTrailingWhitespace": false
    },

    /* C/C++ */
    "[c]": {
        "editor.fontFamily": "'Cascadia Code', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
        "editor.fontLigatures": true,
    },
    "[cpp]": {
    },

    /* Rust */
    "rust.show_warnings": true,
    // "rust-analyzer.inlayHints.enable": false,
    "rust-analyzer.inlayHints.typeHints.enable": false,
    "rust-analyzer.inlayHints.typeHints.hideNamedConstructor": false,
    "rust-analyzer.inlayHints.typeHints.hideClosureInitialization": false,
    "rust-analyzer.inlayHints.chainingHints.enable": false,
    "rust-analyzer.inlayHints.parameterHints.enable": false,
    "rust-analyzer.inlayHints.closingBraceHints.enable": false,
    "rust-analyzer.inlayHints.maxLength": 250, // default 25

    /* js/ts */
    "[jsx-tags]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.tabSize": 2
    },
    "[javascriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.tabSize": 2
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.insertSpaces": true,
        "editor.tabSize": 2
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.tabSize": 2,
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.tabSize": 2,
    },
    "[Astro]": {
        "editor.tabSize": 2,
    },
    "[scss]": {
        "editor.suggest.insertMode": "replace",
        "editor.formatOnSave": true,
        "editor.tabSize": 2,
        // "editor.defaultFormatter": "esbenp.prettier-vscode"
        "editor.maxTokenizationLineLength": 20000,
        "editor.defaultFormatter": "sibiraj-s.vscode-scss-formatter"
    },

    /* Latex */
    "latex-workshop.view.pdf.viewer": "tab",

    "[markdown-math]": {
        "editor.tabSize": 2
    },
    /* Markdown */
    "[md]": {
        "editor.tabSize": 2
    },
    "[markdown]": {
        "editor.tabSize": 2
    },

    /* SQL */
    "[sql]": {
        "editor.defaultFormatter": "adpyke.vscode-sql-formatter"
    },
    "[sqlite]": {
        "editor.defaultFormatter": "adpyke.vscode-sql-formatter"
    },

    /* JSON Editor stuff */
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    /* Java */
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "java.configuration.checkProjectSettingsExclusions": false,
    "java.errors.incompleteClasspath.severity": "ignore",
    "[java]":{
        "editor.suggest.snippetsPreventQuickSuggestions": false,
        "editor.formatOnSave": false,
        "files.trimTrailingWhitespace": false,
    },

    /* Verilog */
    "[verilog]": {
        "editor.tabSize": 2,
    },

    /* HTML Files */
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.tabSize": 2
    },

    /* Bash and Shell Scripts */
    "[shellscript]": {
        "editor.tabSize": 2
    },

    /* Terraform */
    "[terraform]": {
        "editor.tabSize": 2
    },
    "[terraform-vars]": {
        "editor.tabSize": 2
    },

    /* Astro */
    "[astro]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },

    /* Vim Mode ext. */
    "vim.vimrc.path": "/home/harry/.vim/vimrc",
    "vim.useSystemClipboard": true,
    "vim.cursorStylePerMode.insert": "block",
    "vim.insertModeKeyBindings": [
        {
            "before": ["<C-j>"],
            "after": ["<Esc>"]
        },
    ],
    "vim.visualModeKeyBindings": [
        {
            "before": ["<C-c>"],
            "after": ["\"", "+", "y"]
        },
        // {
        //     "before": ["<C-v>"],
        //     "after":  ["\"", "+", "p"]
        // }
    ],

    /* Built-it Terminal */
    "terminal.integrated.fontFamily": "'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "terminal.integrated.defaultProfile.linux": "bash", // Use bash
    "terminal.integrated.profiles.linux": {
        "bash": {
            "path": "bash",
            "icon": "terminal-bash"
        },
        "zsh": {
            "path": "zsh"
        },
        "fish": {
            "path": "fish"
        },
        "tmux": {
            "path": "tmux",
            "icon": "terminal-tmux"
        },
        "pwsh": {
            "path": "pwsh",
            "icon": "terminal-powershell"
        }
    },

    /* Spell Checker */
    "cSpell.enabled": true,
    "cSpell.userWords": [
        "kubernetes",
        "Merkle",
        "merkleroot",
        "monospace",
        "Popd",
        "protobuf",
        "protoc",
        "Pushd",
        "struct",
        "systemd",
        "unmarshaling",
        "UTXO"
    ],

    /* TODO Highlighting */
    "todohighlight.keywords": [
        {
            "text": "TODO",
            "backgroundColor": "white",
            "color": "black",
            "borderRadius": "3px"
        }
    ],

    /* Liveshare extention */
    "liveshare.authenticationProvider": "GitHub",
    "liveshare.shareExternalFiles": false,
    "liveshare.anonymousGuestApproval": "accept",
    "liveshare.presence": false,

    /* VSCode Pets Extention */
    "vscode-pets.position": "explorer",
    "vscode-pets.petSize": "medium",
    "vscode-pets.theme": "none",
    "vscode-pets.petType": "cat",

    /* Misc. */
    "breadcrumbs.enabled": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "jupyter.sendSelectionToInteractiveWindow": false,
    "cmake.configureOnOpen": true,
    "redhat.telemetry.enabled": false,
    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "vs-kubernetes": {
        "vscode-kubernetes.minikube-path.linux": "/home/harry/.local/state/vs-kubernetes/tools/minikube/linux-amd64/minikube"
    },

    "nix.enableLanguageServer": true,
    "nix.serverPath": "/home/harry/.nix-profile/bin/rnix-lsp",
    "window.zoomLevel": -1,
}